<header>
  <div class="logo">üåê DeepDue</div>
  <input id="url" placeholder="Enter URL (e.g., example.com)">
  <button onclick="navigate()">Go</button>
</header>

<iframe id="view" src="https://example.com"></iframe>

<footer>DeepDue Browser ¬© 2025</footer>

<script>
const input = document.getElementById('url');
const iframe = document.getElementById('view');

function navigate() {
  let url = input.value.trim();
  if (!url) return;
  if (!url.startsWith('http')) url = 'https://' + url;
  iframe.src = url;
  document.title = "DeepDue ‚Äì " + url.replace(/^https?:\/\//, '');
}

input.addEventListener('keydown', e => {
  if (e.key === 'Enter') navigate();
});
</script>
